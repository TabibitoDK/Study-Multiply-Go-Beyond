<%- include('layout') %>

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>Database Overview</h3>
            <div>
                <button class="btn btn-outline-primary btn-sm me-2" id="autoRefreshBtn" onclick="toggleAutoRefresh()">
                    <i class="fas fa-play"></i> Auto Refresh
                </button>
                <button class="btn btn-outline-secondary btn-sm" onclick="checkIntegrity()">
                    <i class="fas fa-shield-alt"></i> Check Integrity
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <% collections.forEach(collection => { %>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 collection-card stats-card">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                <%= collection.charAt(0).toUpperCase() + collection.slice(1) %>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <%= stats[collection] || 0 %>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-<%= getCollectionIcon(collection) %> fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<!-- User Distribution -->
<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">User Data Distribution</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in">
                        <a class="dropdown-item" href="#" onclick="exportUserDistribution()">Export Data</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/admin/view-data/users">View All Users</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <% if (userDistribution.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="userDistributionTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Books</th>
                                    <th>Posts</th>
                                    <th>Total Items</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% userDistribution.forEach(user => { %>
                                    <tr>
                                        <td><%= user.username %></td>
                                        <td><%= user.email %></td>
                                        <td><span class="badge bg-info"><%= user.booksCount || 0 %></span></td>
                                        <td><span class="badge bg-success"><%= user.postsCount || 0 %></span></td>
                                        <td><span class="badge bg-primary"><%= (user.booksCount || 0) + (user.postsCount || 0) %></span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" onclick="viewUserData('<%= user._id %>')">
                                                <i class="fas fa-eye"></i> View
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No user data found</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="/admin/view-data/users" class="list-group-item list-group-item-action">
                        <i class="fas fa-users me-2"></i>View All Users
                    </a>
                    <a href="/admin/view-data/books" class="list-group-item list-group-item-action">
                        <i class="fas fa-book me-2"></i>View All Books
                    </a>
                    <a href="/admin/view-data/posts" class="list-group-item list-group-item-action">
                        <i class="fas fa-newspaper me-2"></i>View All Posts
                    </a>
                    <a href="/admin/view-data/profiles" class="list-group-item list-group-item-action">
                        <i class="fas fa-user-circle me-2"></i>View All Profiles
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="list-group-item list-group-item-action" onclick="exportAllData()">
                        <i class="fas fa-download me-2"></i>Export All Data
                    </a>
                    <a href="#" class="list-group-item list-group-item-action" onclick="showMigrationStats()">
                        <i class="fas fa-chart-bar me-2"></i>Migration Statistics
                    </a>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">System Status</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="small text-gray-500">Database Connection</div>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small class="text-success">Connected</small>
                </div>
                <div class="mb-3">
                    <div class="small text-gray-500">Last Migration</div>
                    <small class="text-gray-700" id="lastMigrationTime"><%= new Date().toLocaleString() %></small>
                </div>
                <div>
                    <div class="small text-gray-500">Total Records</div>
                    <h5 class="font-weight-bold text-gray-800">
                        <%= Object.values(stats).reduce((sum, count) => sum + count, 0) %>
                    </h5>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Integrity Check Results Modal -->
<div class="modal fade" id="integrityModal" tabindex="-1" aria-labelledby="integrityModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="integrityModalLabel">Data Integrity Check</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="integrityResults">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Checking data integrity...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function getCollectionIcon(collection) {
        const icons = {
            users: 'users',
            books: 'book',
            posts: 'newspaper',
            profiles: 'user-circle',
            goals: 'bullseye',
            calendarEvents: 'calendar',
            flashcardGroups: 'layer-group',
            flashcardAISettings: 'robot',
            taskPlans: 'tasks',
            flowEdges: 'project-diagram',
            tags: 'tags'
        };
        return icons[collection] || 'database';
    }

    function viewUserData(userId) {
        window.open(`/admin/view-data/books?userId=${userId}`, '_blank');
    }

    function checkIntegrity() {
        const modal = new bootstrap.Modal(document.getElementById('integrityModal'));
        modal.show();
        
        fetch('/admin/api/integrity-check')
            .then(response => response.json())
            .then(data => {
                const resultsDiv = document.getElementById('integrityResults');
                if (data.status === 'healthy') {
                    resultsDiv.innerHTML = `
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>All systems healthy!</strong> No integrity issues found.
                        </div>
                        <p class="text-muted">Checked at: ${new Date(data.timestamp).toLocaleString()}</p>
                    `;
                } else {
                    let issuesHtml = '<div class="alert alert-warning" role="alert"><i class="fas fa-exclamation-triangle me-2"></i><strong>Issues found:</strong></div>';
                    data.issues.forEach(issue => {
                        issuesHtml += `
                            <div class="card mb-2 integrity-issue">
                                <div class="card-body">
                                    <h6 class="card-title">${issue.type.replace('_', ' ').toUpperCase()}</h6>
                                    <p class="card-text">${issue.message}</p>
                                    <small class="text-muted">Collection: ${issue.collection}, Count: ${issue.count}</small>
                                </div>
                            </div>
                        `;
                    });
                    resultsDiv.innerHTML = issuesHtml;
                }
            })
            .catch(error => {
                document.getElementById('integrityResults').innerHTML = `
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-times-circle me-2"></i>
                        <strong>Error:</strong> Failed to check integrity. ${error.message}
                    </div>
                `;
            });
    }

    function exportUserDistribution() {
        const table = document.getElementById('userDistributionTable');
        let csv = 'Username,Email,Books,Posts,Total Items\n';
        
        const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
        for (let row of rows) {
            const cells = row.getElementsByTagName('td');
            const rowData = [
                cells[0].textContent,
                cells[1].textContent,
                cells[2].textContent.trim(),
                cells[3].textContent.trim(),
                cells[4].textContent.trim()
            ];
            csv += rowData.join(',') + '\n';
        }
        
        downloadCSV(csv, 'user-distribution.csv');
    }

    function exportAllData() {
        alert('This would trigger a full data export. Implementation needed for production use.');
    }

    function showMigrationStats() {
        alert('Migration statistics feature would show detailed migration history and statistics.');
    }

    function downloadCSV(csv, filename) {
        const blob = new Blob([csv], { type: 'text/csv' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = filename;
        a.click();
        window.URL.revokeObjectURL(url);
    }
</script>