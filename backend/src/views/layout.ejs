<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Database Viewer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        .collection-card {
            transition: transform 0.2s;
        }
        .collection-card:hover {
            transform: translateY(-2px);
        }
        .data-table {
            font-size: 0.9rem;
        }
        .data-table th {
            background-color: #f8f9fa;
            position: sticky;
            top: 0;
        }
        .json-viewer {
            background-color: #f8f9fa;
            border-radius: 4px;
            padding: 10px;
            font-family: monospace;
            font-size: 0.85rem;
            max-height: 300px;
            overflow-y: auto;
        }
        .status-badge {
            font-size: 0.8rem;
        }
        .search-box {
            max-width: 300px;
        }
        .pagination-container {
            justify-content: center;
        }
        .navbar-brand {
            font-weight: bold;
        }
        .user-info {
            font-size: 0.85rem;
            color: #6c757d;
        }
        .stats-card {
            border-left: 4px solid #007bff;
        }
        .integrity-issue {
            border-left: 4px solid #dc3545;
        }
        .integrity-success {
            border-left: 4px solid #28a745;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/view-data">
                <i class="fas fa-database me-2"></i>Database Viewer
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/admin/view-data">
                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
                <a class="nav-link" href="/admin/api/integrity-check" target="_blank">
                    <i class="fas fa-shield-alt me-1"></i>Integrity Check
                </a>
                <a class="nav-link" href="/admin/logout">
                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Collections</span>
                    </h6>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/users">
                                <i class="fas fa-users me-2"></i>Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/books">
                                <i class="fas fa-book me-2"></i>Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/posts">
                                <i class="fas fa-newspaper me-2"></i>Posts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/profiles">
                                <i class="fas fa-user-circle me-2"></i>Profiles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/goals">
                                <i class="fas fa-bullseye me-2"></i>Goals
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/calendarEvents">
                                <i class="fas fa-calendar me-2"></i>Calendar Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/flashcardGroups">
                                <i class="fas fa-layer-group me-2"></i>Flashcard Groups
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/flashcardAISettings">
                                <i class="fas fa-robot me-2"></i>Flashcard AI Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/taskPlans">
                                <i class="fas fa-tasks me-2"></i>Task Plans
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/flowEdges">
                                <i class="fas fa-project-diagram me-2"></i>Flow Edges
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/view-data/tags">
                                <i class="fas fa-tags me-2"></i>Tags
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><%= title %></h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshData()">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                        </div>
                    </div>
                </div>

                <%- body %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function refreshData() {
            window.location.reload();
        }

        function formatJSON(obj) {
            return JSON.stringify(obj, null, 2);
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert('Copied to clipboard!');
            });
        }

        function toggleJSONView(elementId) {
            const element = document.getElementById(elementId);
            if (element.style.display === 'none') {
                element.style.display = 'block';
            } else {
                element.style.display = 'none';
            }
        }

        // Auto-refresh functionality
        let autoRefreshInterval;
        function toggleAutoRefresh() {
            if (autoRefreshInterval) {
                clearInterval(autoRefreshInterval);
                autoRefreshInterval = null;
                document.getElementById('autoRefreshBtn').innerHTML = '<i class="fas fa-play"></i> Auto Refresh';
            } else {
                autoRefreshInterval = setInterval(refreshData, 30000); // Refresh every 30 seconds
                document.getElementById('autoRefreshBtn').innerHTML = '<i class="fas fa-pause"></i> Stop Auto Refresh';
            }
        }
    </script>
</body>
</html>